// Git Bash (MinTTY) is required for proper working on Windows
// On Windows, the application runs on a standard GPU
// On Linux, it is possible to start with primus

{
    "version": "2.0.0",
    "tasks": [

        // cross-platform build
        {
            "label": "Build",
            "type": "shell",
            "command": "./make.sh",
            "windows": {
                "command": "./make.bat",
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher":[]
        },

        // cross-platform run
        {
            "label": "Run",
            "type": "shell",
            "command": "./run.sh",
            "windows": {
                "command": "./run.bat"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher":[]
        },

        // linux run with primus
        {
            "label": "Run on Linux with primus",
            "type": "shell",
            "command": "./run.sh",
            "args": [
                "primus"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher":[]
        },

        // cross-platform build and run
        {
            "label": "Build and run",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "./make.sh && ./run.sh"
            ],
            "windows": {
                "args": [
                    "-c",
                    "./make.bat && ./run.bat"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher":[]
        },

        // linux build and run with primus
        {
            "label": "Build and run on Linux with primus",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "./make.sh && ./run.sh primus"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher":[]
        }
    ]
}